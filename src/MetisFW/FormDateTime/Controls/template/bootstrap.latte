<div class="metisfw-datepicker" data-metisfw-forms-datepicker data-metisfw-forms-datepicker-type="bootstrap" data-settings="{json_encode($settings)}">
	{if isset($dateInput)}
		<div n:if="$showButtons && $buttonsPosition == 'before' && ($showTriggerButton || $showCancelButton)" class="btn-group">
			<a n:if="$showTriggerButton" href="#" class="btn btn-default" data-action="datepicker.show"><i class="glyphicon glyphicon-calendar"></i></a>
			<a n:if="$showCancelButton" href="#" class="btn btn-default" data-action="datepicker.clear"><i class="glyphicon glyphicon-remove"></i></a>
		</div>
		{$dateInput}
		<div n:if="$showButtons && $buttonsPosition == 'after' && ($showTriggerButton || $showCancelButton)" class="btn-group">
			<a n:if="$showTriggerButton" href="#" class="btn btn-default" data-action="datepicker.show"><i class="glyphicon glyphicon-calendar"></i></a>
			<a n:if="$showCancelButton" href="#" class="btn btn-default" data-action="datepicker.clear"><i class="glyphicon glyphicon-remove"></i></a>
		</div>
	{/if}
	{if isset($timeInput)}
		<div n:if="$showButtons && $buttonsPosition == 'before' && ($showTriggerButton || $showCancelButton)" class="btn-group">
			<a n:if="$showTriggerButton" href="#" class="btn btn-default" data-action="timepicker.show"><i class="glyphicon glyphicon-time"></i></a>
			<a n:if="$showCancelButton" href="#" class="btn btn-default" data-action="timepicker.clear"><i class="glyphicon glyphicon-remove"></i></a>
		</div>
		{$timeInput}
		<div n:if="$showButtons && $buttonsPosition == 'after' && ($showTriggerButton || $showCancelButton)" class="btn-group">
			<a n:if="$showTriggerButton" href="#" class="btn btn-default" data-action="timepicker.show"><i class="glyphicon glyphicon-time"></i></a>
			<a n:if="$showCancelButton" href="#" class="btn btn-default" data-action="timepicker.clear"><i class="glyphicon glyphicon-remove"></i></a>
		</div>
	{/if}
</div>